{
  "entryPoints": ["./src"], // Path to your source code
  "out": "./docs", // Output directory for generated documentation
  "includeVersion": true, // Adds the project version to the documentation
  "includeLinks": true, // Ensures {@link} links are processed correctly
  "plugin": ["typedoc-plugin-markdown"], // For Markdown output (optional)
  "exclude": ["**/node_modules/**"], // Exclude unnecessary directories
  "excludePrivate": true, // Exclude private members from documentation
  "hideGenerator": true // Hides the "Generated by TypeDoc" footer
}
